<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <stroke android:color="@android:color/black" android:width="1dp" /> <!-- Border color and width -->
            <corners android:radius="10dp" />
            <padding android:right="10dp"
            android:top="10dp"
            android:left="10dp"
            android:bottom="10dp"/> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
</layer-list>
